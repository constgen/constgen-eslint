{
	"plugins": [
		"align-assignments",
		"eslint-plugin-no-inferred-method-name"
	],
	"env": {
		"shared-node-browser": true,
		"browser": false,
		"node": false
	},
	"rules": {
		"no-extra-parens": "off",
		"no-param-reassign": "off",
		"semi": ["warn", "never"],
		"eol-last": ["warn", "never"],
		"no-multi-spaces": ["warn", {
			"exceptions": { 
				"Property": true,
				"VariableDeclarator": true
			}
		}],
		"init-declarations": ["error", "always", {
			"ignoreForLoopInit": true 
		}],
		"key-spacing": ["warn", { 
			"beforeColon": false, 
			"afterColon": true,
			"mode": "strict",
			"align": "colon" 
		}],
		"vue/key-spacing": ["warn", {
			"beforeColon": false, 
			"afterColon": true,
			"mode": "strict",
			"align": "colon" 
		}],
		"align-assignments/align-assignments": ["warn", { 
			"requiresOnly": false 
		}],
		"no-inferred-method-name/no-inferred-method-name": "warn",
		"unicorn/catch-error-name": ["error", {
			"name": "error",
			"ignore": [
				"^err$",
				"^\\w+Err$"
			]
		}],
		"unicorn/import-index": ["error", {"ignoreImports": false}],
		"unicorn/no-for-loop": "error",
		"unicorn/no-hex-escape": "error",
		"unicorn/no-keyword-prefix": ["error",{
			"blacklist": ["new", "class"],
			"checkProperties": false,
			"onlyCamelCase": false
		}],
		"unicorn/no-null": ["error", {"checkStrictEquality": false}],
		"unicorn/prevent-abbreviations": ["warn", {
			"extendDefaultReplacements": true,
			"replacements": {
				"arg": {
					"argument": false
				},
				"args": {
					"arguments": false
				},
				"attr": {
					"attribute": false
				},
				"attrs": {
					"attributes": false
				},
				"e": {
					"error": false
				},
				"env": {
					"environment": false
				},
				"err": {
					"error": false
				},
				"param": {
					"parameter": false
				},
				"params": {
					"parameters": false
				},
				"prop": {
					"property": false
				},
				"props": {
					"properties": false
				}
			},
			"checkVariables": true,
			"checkProperties": false,
			"checkFilenames": false
		}],
		"unicorn/prefer-starts-ends-with": "off",
		"sonarjs/prefer-immediate-return": "error",
		"jest/lowercase-name": ["error", {
			"ignoreTopLevelDescribe": true
		}],
		"@getify/proper-arrows/params": ["error", { 
			"count": 2,
			"trivial": false 
		}],
		"@getify/proper-arrows/where": ["error", { 
			"global": true,
			"property": false,
			"export": true,
			"trivial": false
		}]
	}
}