{
	"plugins": [
		"align-assignments",
		"eslint-plugin-no-inferred-method-name"
	],
	"env": {
		"shared-node-browser": true,
		"browser": false,
		"node": false
	},
	"rules": {
		"no-extra-parens": "off",
		"no-param-reassign": "off",
		"semi": ["warn", "never"],
		"eol-last": ["warn", "never"],
		"no-multi-spaces": ["warn", {
			"exceptions": { 
				"Property": true,
				"VariableDeclarator": true
			}
		}],
		"init-declarations": ["error", "always", {
			"ignoreForLoopInit": true 
		}],
		"key-spacing": ["warn", { 
			"beforeColon": false, 
			"afterColon": true,
			"mode": "strict",
			"align": "colon" 
		}],
		"vue/key-spacing": ["warn", {
			"beforeColon": false, 
			"afterColon": true,
			"mode": "strict",
			"align": "colon" 
		}],
		"align-assignments/align-assignments": ["warn", { 
			"requiresOnly": false 
		}],
		"no-inferred-method-name/no-inferred-method-name": "warn"
	}
}