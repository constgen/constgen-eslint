{
	"plugins": [
		"align-assignments"
	],
	"env": {
		"shared-node-browser": true,
		"browser"            : false,
		"node"               : false
	},
	"rules": {
		"no-extra-parens"  : "off",
		"no-param-reassign": "off",
		"semi"             : ["warn", "never"],
		"eol-last"         : ["warn", "never"],
		"no-multi-spaces"  : ["warn", {
			"exceptions": {
				"Property"            : true,
				"JSONProperty"        : true,
				"VariableDeclarator"  : true,
				"ImportDeclaration"   : true,
				"AssignmentExpression": true,
				"AssignmentPattern"   : true
			}
		}],
		"init-declarations": ["error", "always"],
		"key-spacing"      : ["warn", {
			"beforeColon": false,
			"afterColon" : true,
			"mode"       : "strict",
			"align"      : "colon"
		}],
		"vue/key-spacing": ["warn", {
			"beforeColon": false,
			"afterColon" : true,
			"mode"       : "strict",
			"align"      : "colon"
		}],
		"align-assignments/align-assignments": ["warn", {
			"requiresOnly": false
		}],
		"unicorn/catch-error-name": ["error", {
			"name"  : "error",
			"ignore": [
				"^err$",
				"^\\w+Err$"
			]
		}],
		"unicorn/import-index"         : ["error", { "ignoreImports": false }],
		"unicorn/no-for-loop"          : "error",
		"unicorn/no-hex-escape"        : "error",
		"unicorn/no-null"              : ["error", { "checkStrictEquality": false }],
		"unicorn/prevent-abbreviations": ["warn", {
			"extendDefaultReplacements": true,
			"replacements"             : {
				"arg": {
					"argument": false
				},
				"args": {
					"arguments": false
				},
				"attr": {
					"attribute": false
				},
				"attrs": {
					"attributes": false
				},
				"e": {
					"error": false
				},
				"env": {
					"environment": false
				},
				"err": {
					"error": false
				},
				"param": {
					"parameter": false
				},
				"params": {
					"parameters": false
				},
				"prop": {
					"property": false
				},
				"props": {
					"properties": false
				}
			},
			"checkVariables" : true,
			"checkProperties": false,
			"checkFilenames" : false
		}],
		"unicorn/prefer-starts-ends-with": "off",
		"unicorn/import-style"           : ["error", {
			"styles": {
				"path"  : { "default": true },
				"lodash": { "named": true },
				"utils" : { "named": true }
			},
			"extendDefaultStyles": false,
			"checkImport"        : true,
			"checkDynamicImport" : false,
			"checkExportFrom"    : false,
			"checkRequire"       : true
		}],
		"sonarjs/prefer-immediate-return": "error",
		"jest/lowercase-name"            : ["error", {
			"ignoreTopLevelDescribe": true
		}],
		"@getify/proper-arrows/params": ["error", {
			"count"  : 2,
			"trivial": false
		}],
		"@getify/proper-arrows/where": ["error", {
			"global"  : true,
			"property": false,
			"export"  : true,
			"trivial" : false
		}],
		"react/jsx-handler-names": ["error", {
			"eventHandlerPrefix"    : "handle",
			"eventHandlerPropPrefix": "on",
			"checkLocalVariables"   : true,
			"checkInlineFunction"   : true
		}],
		"react/function-component-definition": ["error", {
			"namedComponents"  : "function-declaration",
			"unnamedComponents": "function-expression"
		}],
		"jsdoc/check-line-alignment": ["warn", "always"]
	}
}